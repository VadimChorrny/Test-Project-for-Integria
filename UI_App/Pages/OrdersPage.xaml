<Page x:Class="UI_App.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersPage" Background="White">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Enter Customer Name" FontSize="30" />
            <TextBox x:Name="tbCustomer" FontSize="30" />
            <TextBlock Text="Enter Order Name" FontSize="30" />
            <TextBox x:Name="tbOrderName" FontSize="30" />
            <Button Content="New Customer" Name="btnNewCustomer" Click="btnNewCustomer_Click" FontSize="15" />
        </StackPanel>
    </Grid>
</Page>
