<Page x:Class="UI_App.Pages.OrderLines"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderLines" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="208*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <DataGrid FontSize="20" x:Name="dgOrderLine" Margin="0,0,0,-0.4" Grid.Row="0" />
        <WrapPanel Grid.Row="1" Background="Wheat">
            <Button Width="300" Margin="5" Content="Update" Name="btnUpdate" Click="btnUpdate_Click" />
            <Button Width="300" Margin="185 5 0 5 " Content="Remove" Name="btnRemove" Click="btnRemove_Click" />
        </WrapPanel>
    </Grid>
</Page>
